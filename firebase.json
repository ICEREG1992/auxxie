{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
      "source": "./",
      "destination": "/index.html"
    }, {
      "source": "/room{,/**}",
      "destination": "/room.html"
    } ],
    "redirects": [ {
      "source": "/r/:num",
      "destination": "/room?n=:num",
      "type": 301
    } ]
  }
}
